{
  "manifest_version": 3,
  "name": "TabbyMcTabface",
  "version": "1.0.0",
  "description": "Passive-aggressive tab management with humor. Organizes your chaos while delivering snarky quips and clever easter eggs.",
  "author": "TabbyMcTabface Team",

  "permissions": [
    "tabs",
    "tabGroups",
    "notifications",
    "storage"
  ],

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TabbyMcTabface - Tab Management with Attitude"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "data/quips/passive-aggressive.json",
        "data/quips/easter-eggs.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open TabbyMcTabface popup"
    },
    "feeling_lucky": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Close a random tab (I'm Feeling Lucky)"
    }
  }
}
